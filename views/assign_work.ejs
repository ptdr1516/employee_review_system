<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assign Work</title>
</head>
<body>
    <%- include('_headera', {emp:emp}); %>
    <p class="work-heading" style="text-align: center;">Assign Recipient and Receiver</p>
    <div class="assignWork">
        <div class="assignW">
            <div class="headingA">
                <h2>Set Reviewers</h2>
            </div>
            <form action="/assign-review" method="post">Recipient
                <br>
                <select name="recipient" class="form-select" aria-label="Default select example">
                    <option selected disabled>Select Recipient</option>

                    <% for(let e of emp) { %>
                        <option value="<%= [e.name, e.email] %>"><%= e.name %></option>
                    <% } %>
                </select>

                <br>
                Reviewer
                <br>
                <select name="reviewer" class="form-select" aria-label="Default select example">
                    <option selected disabled>Select Reviewer</option>

                    <% for(let e of emp) { %>
                        <option value="<%= e.email %>"><%= e.name %></option>
                    <% } %>
                </select>
                <br>
                <button type="submit" class="btn btn-primary form-control">Submit</button>
                <br><br>
            </form>
        </div>
        <div class="assignW">
            <div class="headingA">
                <h2>Assign Admin to Employees</h2>
            </div>
            <form action="/update-status" method="post">
                <select name="empid" class="form-select" aria-label="Default select example">
                    <option selected disabled>Choose an Employee</option>
                    <% for(let e of emp) { %>
                        <% if(e.isAdmin == "false") { %> 
                            <option value="<%= e.email %>"><%= e.name %></option>   
                    <% } %>
                    <% } %>
                </select>
                <br>
                <button type="submit" class="btn btn-primary form-control">Submit</button>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>